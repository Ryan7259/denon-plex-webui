{
  "name": "denon-plex-webui",
  "author": "Ryan Le",
  "description": "Web UI to stream Plex media to HEOS devices and control its functions via HEOS API requests",
  "version": "1.0.0",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"NODE_ENV=development electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.denonPlex.webApp",
    "files": [
      "dist/**",
      "main.js",
      "src/client-preload.js",
      "src/connect.js",
      "src/search.js",
      "src/server-ipc.js"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "portable",
      "icon": "icon.png"
    },
    "portable": {
      "artifactName": "DenonPlexApp.exe"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "axios": "^0.21.1",
    "bootstrap": "^5.1.3",
    "node-ipc": "^10.1.0",
    "node-ssdp": "^4.0.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-bootstrap": "^2.1.1",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "styled-components": "^5.3.0",
    "telnet-client": "^2.0.1",
    "uuid": "^8.3.2",
    "win-node-env": "^0.6.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^1.1.4",
    "concurrently": "^7.0.0",
    "electron": "^16.0.7",
    "vite": "^2.7.13",
    "electron-builder": "^22.14.5"
  }
}
